{
    "coc.preferences.rootPatterns": [".git", ".env"],
    "diagnostic.enable": true,
    "diagnostic.checkCurrentLine": true,
    "diagnostic.displayByAle": false,
    "diagnostic.messageTarget": "echo",
    "diagnostic.virtualText": true,
    "diagnostic-languageserver.filetypes": {
        "vim": "vint",
        "email": "languagetool",
        "markdown": [ "write-good", "markdownlint" ],
        "sh": "shellcheck",
        "yaml": [ "yamllint" ],
        "systemd": "systemd-analyze"
    },
    "diagnostic-languageserver.formatFiletypes": {
        "sh": "shfmt",
        "cmake": "cmake-format"
    },
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": ["--ignore E501"],
    "codeLens.enable": true,
    "explorer.icon.enableNerdfont": true,
    "explorer.mouseMode": "singleclick",
    "go.goplsOptions": {
        "completeUnimported": true
    },
    "typescript.format.enable": true,
    "eslint.format.enable": true,
    "eslint.autoFixOnSave": true,
    "languageserver": {
        "terraform": {
            "command": "terraform-ls",
            "filetypes": ["terraform"]
        },
        "puppet": {
            "command": "/usr/bin/ruby",
            "args": ["puppet-languageserver","--stdio","--puppet-settings=--moduledir,/home/gaetan/Workspace/corpit/puppet/"],
            "cwd": "/home/gaetan/Workspace/personal/puppet/puppet-editor-services",
            "filetypes": ["puppet"],
            "rootPatterns": [".git/", "metadata.json"]
        }
    },
    "snippets.ultisnips.pythonPrompt": false
}
